@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using UmbracoCms.ViewModels


@{
	var model = (ContentModels.AboutCallbackSection)Model.Content;
    var aboutCallbackFormTitle = model.Value<string>("aboutCallbackFormTitle");
    var aboutCallbackFormDescription = model.Value<string>("aboutCallbackFormDescription");
    var aboutCallbackSectionBody = model.Value<string>("aboutCallbackSectionBody");

}

<section class="about-section">
    <div class="about-container">

        <div class="left-column">
            <div class="about-text"> @Html.Raw(aboutCallbackSectionBody)</div>
        </div>

               <div class="right-column">
                     <div class="form-container">
                <div class="form-title">@Html.Raw(aboutCallbackFormTitle)</div>
                <div class="form-subtitle"> @Html.Raw(aboutCallbackFormDescription)</div>

            <partial name="Partials/Forms/_CallBackForm" model="new CallBackFormViewModel()" />
            </div>
        </div>

    </div>
</section>
